<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
    android:weightSum="1">

    <include layout="@layout/top" />
    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="查看月柱状图"
        android:textColor="#ffffff"
        android:drawableLeft="@drawable/yz"
        android:paddingLeft="30dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:background="@drawable/blue"
        android:id="@+id/month_zhu"

        android:layout_marginTop="62dp"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="查看周柱状图"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/blue"
        android:id="@+id/week_zhu"
        android:layout_below="@+id/month_zhu"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/zz"
        android:paddingLeft="30dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="查看周折线图"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/blue"
        android:id="@+id/week_zhe"
        android:layout_below="@+id/week_zhu"

        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/zzx"
        android:paddingLeft="30dp"
        android:layout_centerHorizontal="true"
        />

    <com.dd.CircularProgressButton
        android:layout_width="196dp"
        android:layout_height="64dp"
        app:cpb_cornerRadius="48dp"
        android:text="返回"
        android:layout_marginRight="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        app:cpb_textIdle="@string/Fanh"
        android:textColor="#ffffff"
        android:id="@+id/tu_return"
        android:background="#3590b7"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="47dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>