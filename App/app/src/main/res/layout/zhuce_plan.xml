<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4">
    <RelativeLayout
        android:id="@+id/top_relative"
        android:layout_width="fill_parent"
        android:background="#3590b7"
        android:layout_height="50.0dip" >

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10.0dip"
            android:singleLine="true"
            android:text="时间分配"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="25dp" />
    </RelativeLayout>

    <Spinner
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/level"
        android:entries="@array/level"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignStart="@+id/zhuce_submit" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/main"
        android:entries="@array/main"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/level" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/freelessonnum"
        android:layout_marginLeft="20dp"
        android:entries="@array/frlesson"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/level"
        android:layout_alignStart="@+id/zhuce_submit" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分配等级"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:id="@+id/textView"
        android:textSize="23dp"
        android:layout_above="@+id/main"
        android:layout_alignEnd="@+id/look"
        android:layout_marginBottom="34dp"
        android:textIsSelectable="false" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分配方向"
        android:textColor="#000000"
        android:id="@+id/textView2"
        android:layout_marginLeft="40dp"
        android:textSize="23dp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="空课节数"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:id="@+id/textView17"
        android:textSize="23dp"
        android:layout_alignTop="@+id/freelessonnum"
        android:layout_alignEnd="@+id/look" />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="完成"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/zhuce_submit"
        android:background="#3590b7"
        android:layout_marginLeft="200dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="查看说明"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/look"
        android:background="#3590b7"
        android:layout_marginLeft="30dp"
        android:layout_alignTop="@+id/zhuce_submit"
        android:layout_alignParentStart="true" />
</RelativeLayout>
